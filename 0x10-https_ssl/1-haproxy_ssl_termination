global
    log /dev/log    local0
    stats socket /run/haproxy/admin.sock mode 660 level admin
defaults
    log     global
    mode    http
    option  httplog
    timeout connect 10s
    timeout client  30s
    timeout server  30s

frontend my_frontend
    bind *:80
    bind *:443 ssl crt /etc/letsencrypt/archive/www.ag-dev.tech/fullchain.pem 
    http-request redirect scheme https unless { ssl_fc }
    http-request set-header X-Forwarded-Proto https
    default_backend alx-backend

backend alx_backend
    balance roundrobin
    server 369995-web-01 54.90.63.243:80 check
    server 369995-web-02 54.90.4.180:80 check